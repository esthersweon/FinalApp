<h3>new phase</h3>

<form role="form">

	<input type="hidden"
	name="phase[project_id]"
	value="<%= project.escape("id") %>">

	<div class="form-group">
		<input type="text"
		id="phase_title"
		name="phase[title]"
		value="<%= phase.title %>"
		placeholder="phase title"
		class="form-control">
	</div>

	<div class="form-group">
		<input type="date"
		id="phase_end_date"
		name="phase[end_date]"
		value="<%= phase.end_date %>"
		placeholder="end date"
		class="form-control">
	</div>

	<input type="submit" class="btn btn-create" value="&#10003">
	<button id="cancel" class="btn btn-danger">X</button>
</form>