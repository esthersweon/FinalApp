<div class="form-container">
<h2>create a member</h2>

<form role="form">
  <div class="form-group">
  <input
    type="text"
    name="member[fname]"
    value="<%= member.escape("fname") %>"
    placeholder="first name"
    class="form-control">
  </div>

  <div class="form-group">
  <input
    type="text"
    name="member[lname]"
    value="<%= member.escape("lname") %>"
    placeholder="last name"
    class="form-control">
  </div>

  <div class="form-group">
  <input
    type="text"
    name="member[role]"
    value="team member"
    placeholder="role"
    class="form-control">
  </div>

  <div class="form-group">
  <input
    type="textarea"
    name="member[bio]"
    value="<%= member.escape("bio") %>"
    placeholder="short bio"
    class="form-control">
  </div>

  <input type="submit" value="&#10003">
  <button class="cancel">X</button>
  
</form>
</div>