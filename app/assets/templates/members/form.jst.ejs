<h1>Add a New Member</h1>

<form>
  
	<label>First Name: 
  <input
    type="text"
    name="member[fname]"
    value="<%= member.escape("fname") %>">
  </label>
  <br>

  <label>Last Name: 
  <input
    type="text"
    name="member[lname]"
    value="<%= member.escape("lname") %>">
  </label>
  <br>

  <label>Role: 
  <input
    type="text"
    name="member[role]"
    value="Team Member">
  </label>
  <br>

  <label>Short Bio (optional): 
  <input
    type="textarea"
    name="member[bio]"
    value="<%= member.escape("bio") %>">
  </label>
  <br>
  <br>

  <input type="submit" value="&#10003">
  <button class="cancel">X</button>
  
</form>
