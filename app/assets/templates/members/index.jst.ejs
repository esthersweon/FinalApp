<div class="container">

	<div class="row">

		<div class="col-sm-2"></div>

		<div class="col-sm-6">
			<table class="table">

			<thead><tr>
				<th><span class="glyphicon glyphicon-user"></span> members</span> </th>
				<th></th>
			</tr></thead>
			
			<tbody>
			
			<% members.each (function(member) { %>
			<tr>
			<td>
				<strong><a href="#/members/<%= member.id %>">
					<%= member.escape("fname") + " " + member.escape("lname") %>
				</a></strong><br>
				<%= member.escape("role") %>
			</td>
			<td>
				<%= member.escape("bio") %>
			</td>
			</tr>
			<% }) %>
			<tr>
				<td></td>
				<td>
				<a href="#/"><span class="glyphicon glyphicon-chevron-left"></span> home</a>
				</td>
			</tr>

			</tbody>
			</table>

		</div>


		<div class= "col-sm-1"></div>

		<div class= "col-sm-3">
			<div id="members-new"></div>
			<br><br>
			<button id="newMember" class="btn btn-sm btn-default pull-right"><span class="glyphicon glyphicon-user"></span> create member</button>
		</div>

	</div>
</div>