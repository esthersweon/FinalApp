<form role="form">
  
  <div class="form-group">
  <input
    type="text"
    name="title"
    value="<%= project.escape("title") %>"
    placeholder="project title"
    class="form-control">
  </div>

  <div class="form-group">
  <input
    type="date"
    name="end_date"
    value="<%= project.escape("end_date") %>"
    placeholder="end date"
    class="form-control">
  </div>

  <div class="form-group">
  <input
    type="text"
    name="description"
    value="<%= project.escape("description") %>"
    placeholder="project description"
    class="form-control">
  </div>

  <input type="submit" class="btn btn-create" value="&#10003">
  <button id="cancel" class="btn btn-danger">X</button>
  
</form>