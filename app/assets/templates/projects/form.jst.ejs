<br><br><br>

<form role="form">
  <div class="form-group">
  <input
    type="text"
    name="title"
    value="<%= project.escape("title") %>"
    placeholder="project title"
    class="form-control">
  </div>

  <div class="form-group">
  <input
    type="date"
    name="end_date"
    value="<%= project.escape("end_date") %>"
    placeholder="project title"
    class="form-control">
  </div>

  <div class="form-group">
    <textarea type="text" name="description" placeholder="project description" class="form-control" rows="5" cols="70"><%= project.escape("description") %></textarea>
  </div>

  <input type="submit" class="btn btn-sm btn-default" value="&#10003">
  <button id="cancel" class="btn btn-sm btn-default">X</button>
  
</form>