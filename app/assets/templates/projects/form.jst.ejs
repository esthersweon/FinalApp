<h1>create a new project</h1>

<form role="form">
  <div class="form-group">
	<label>project title: 
  <input
    type="text"
    name="title"
    value="<%= project.escape("title") %>"
    class="form-control">
  </label>
  </div

  <div class="form-group">
  <label>project end date: 
  <input
    type="date"
    name="end_date"
    value="<%= project.escape("end_date") %>"
    class="form-control">
  </label>
  </div>

  <div class="form-group">
  <label>project description: 
  <input
    type="text"
    name="description"
    value="<%= project.escape("description") %>"
    class="form-control">
  </div>

  <input type="submit" value="&#10003">
  <button class="cancel">X</button>
  
</form>