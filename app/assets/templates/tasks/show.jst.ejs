
<% if (task.get("status") == "Complete") { %>
	<span class="glyphicon glyphicon-pushpin"> <mark><strike><strong><%= task.escape("title") %></strong><br>
	<%= task.escape("status") %> (<a href="#/members/<%= member.escape("id")%>"><%= member.escape("fname") %> <%= member.escape("lname") %></a>)</mark></strike></strong><br>
<% } else { %>
	<span class="glyphicon glyphicon-pushpin"> <strong><%= task.escape("title") %></strong><br>
	<%= task.escape("status") %> (<a href="#/members/<%= member.escape("id")%>"><%= member.escape("fname") %> <%= member.escape("lname") %></a>)<br><br>
<% } %>

