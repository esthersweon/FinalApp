<br>
<form id="taskform" role="form">


	<input
		type="hidden"
		id="task_phase_id"
		name="task[phase_id]"
		value="<%= phaseID %>">

	<div class="form-group">
		<input
			type="text"
			id="task_title"
			name="task[title]"
			placeholder="task title"
			class="form-control">
	</div>

	<div class="form-group">
		<select id="task_status" name="task[status]" class="form-control">
   			<option selected value="Incomplete">Incomplete</option>
    		<option value="Complete">Complete</option>
		</select>
	</div>

	<div class="form-group">
		<select
			id="task_delegate"
			name="task[member_id]"
			class="form-control">
				<% members.each( function(member) { %>
					<option value="<%= member.escape("id")%>">
					<%= member.escape("fname") + " " + member.escape("lname") %>
					</option>
				<% }) %>
		</select>
	</div>

	<input type="submit" value="&#10003">
  	<button class="cancel">X</button>
</form