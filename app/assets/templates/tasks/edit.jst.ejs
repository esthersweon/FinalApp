<br>
<form id="taskform">
  <input
    type="hidden"
    id="task_phase_id"
    name="task[phase_id]"
    value="<%= phaseID %>">

  <label>
    Task Title: 
    <input
      type="text"
      id="task_title"
      name="task[title]"
      value="<%= task.escape("title")%>">
  </label>
  <br>

  <label>
    Task Status: 
    <select id="task_status" name="task[status]">
        <option selected value="Incomplete">Incomplete</option>
        <option value="Complete">Complete</option>
    </select>
  </label>
  <br>

  <label>
    Delegate (optional):

    <select
      id="task_delegate"
      name="task[member_id]">
          <option selected>None</option>
        <% members.each( function(member) { %>
          <option value="<%= member.escape("id")%>">
          <%= member.escape("fname") + " " + member.escape("lname") %>
          </option>
        <% }) %>
    </select>
  </label>
  <br>

  <input type="submit">
</form