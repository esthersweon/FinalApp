<br>
<form role="form">
  <input
    type="hidden"
    id="task_phase_id"
    name="task[phase_id]"
    value="<%= phaseID %>">

  <div class="form-group">
    <input
      type="text"
      id="task_title"
      name="task[title]"
      placeholder="task title"
      value="<%= task.escape("title")%>"
      class="form-control">
  </div>

  <div class="form-group">
    <select id="task_status" name="task[status]" class="form-control">
        <option value="Incomplete"
        <%= task.get("status") == "Incomplete" ? 'selected' : '' %>>Incomplete</option>
        <option value="Complete"
        <%= task.get("status") == "Complete" ? 'selected' : '' %>>
        Complete</option>
    </select>
  </div>

  <div class="form-group">
    <select
      id="task_delegate"
      name="task[member_id]"
      class="form-control">
        <% members.each( function(member) { %>
          <option 
          value="<%= member.escape("id")%>"
          <%= task.get("member_id") == member.get("id") ? 'selected' : '' %>>
          <%= member.escape("fname") + " " + member.escape("lname") %>
          </option>
        <% }) %>
    </select>
  </div>

  <input type="submit" class="btn btn-create" value="&#10003">
  <button id="cancel" class="btn btn-danger">X</button>
</form>