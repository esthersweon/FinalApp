<div class="container">

	<div class="row">

	<div class= "col-content">
	<img src="/images/pyramid.jpg" alt="Pyramid" width="200" height="300">
	</div>

	<div class= "col-content">
	<h4>||   at a glance   ||</h4>
	<ul>
		<li>||   total projects   ||   <%= projects.length %></li>
		<li>||   total members   ||   <%= members.length %></li>
	</ul>
	</div>

	<div class= "col-content">
	<h4>||   projects   ||</h4>

	<ul>
	<% projects.each (function(project) { %>
		<li class="project">
			<a href="#/projects/<%= project.id %>"><%= project.escape("title") %></a>
		</li>
	<% }) %>
	</ul>
	</div>

	<div class= "col-content">
	<h4>||   team members   ||</h4>

	<ul>
	<% members.each (function(member) { %>
		<li class="member">
			<a href="#/members/<%= member.id %>"><%= member.escape("fname") + " " + member.escape("lname") + " - " + member.escape("role") %></a>
		</li>
	<% }) %>
	</ul>
	</div>
	</div>


</div>