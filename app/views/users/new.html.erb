<div id="sign-up" class="form-container">

	<form action="<%= users_url %>" method="POST" role="form">
	<h3>sign up</h3>

	<div class="form-group">
		<input type="hidden"
		name="authenticity_token"
		value="<%= form_authenticity_token%>"
		>
	</div>

	<div class="form-group">
		<input type="text" name="user[username]" placeholder="team username" class="form-control">
	</div>

	<div class="form-group">
		<input type="password" name="user[password]" placeholder="password" class="form-control">
	</div>

	<button type="submit" class="btn btn-sm btn-default">sign up</button>
	<br><br>

	</form>

</div>