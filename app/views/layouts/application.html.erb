<!DOCTYPE html>
<html>
<head>
  <title>P Y R A M I D</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<body>

  <nav class

  <header>
    <nav class="navbar navbar-default" role="navigation">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#demo-project-navbar-collapse-1">
        &#9776;
      </button>
      <%= link_to "P Y R A M I D", root_url, :class => "navbar-brand"%>
    </div>
    <div class="collapse navbar-collapse" id="demo-project-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><%= link_to "||   Home   ||", root_url %>
        <li><%= link_to "||   About   ||", root_url %>
        <li><%= link_to "||   Contact   ||", root_url %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <%if current_user%>
        <li>
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Welcome, Team <%=current_user.username%>!<b class="caret"></b></a>
        <ul class="dropdown-menu">
          <li class="divider"></li>
          <li><%= link_to "Log Out", session_url, method: :delete %></li>

        </ul>
        </li>
        <% else %>
        <li><%= link_to "Sign In", new_session_url %></li>
        <li><%= link_to "New to Pyramid?", new_user_url %></li>
        <% end %>
      </ul>
    </div>
    </nav>
    </header>

    <%if !current_user%>
      <p>
      <img src="/images/pyramid.jpg" alt="Pyramid" width="400" height="500"></p>
    <% end %>
  

<%= yield %>

</body>
</html>