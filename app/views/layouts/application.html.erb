<!DOCTYPE html>
<html>
<head>
  <title>p y r a m i d</title>
  <link rel="icon" 
      type="image/png" 
      href="/images/favicon.png" />
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<body>

    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div id="nav-container">
        <div class="navbar-header">
          <a href="/#"><img src="/images/logo.png" alt="logo" height="50" width="170"></a>
        </div>

        <div class="collapse navbar-collapse" id="demo-project-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li><a href="/about"><img src="/images/about.png" alt="about" height="25" width="100"></a></li>
            <li><a href="/contact"><img src="/images/contact.png" alt="contact" height="23" width="140"></a></li>
          </ul>
          
          <ul class="nav navbar-nav navbar-right">
            <%if current_user%>
              <li><a href="#" class="dropdown-toggle" data-toggle="dropdown">welcome, team <%=current_user.username%> <b class="caret"></b> </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "log out", session_url, method: :delete %></li>
                </ul>
              </li>
            <% else %>
              <li><a href="/session/new"><img src="/images/sign_in.png" alt="sign_in" height="20" width="100"></a></li>
              <li><a href="/users/new"><img src="/images/new.png" alt="new" height="20" width="250"></a></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

  <%if current_user%>
    <div class="container-fluid">
      <div class="row">

        <div class="col-sm-2">
          <div class="col sidebar">
            <ul class="nav nav-sidebar">
              <li class="active"><a href="/#"><img src="/images/home_page.png" alt="home_page" height="13" width="110"></a></li> 
              <li><a href="/#members"><img src="/images/team_members.png" alt="team_members" height="13" width="140"></a></li> 
              <li><a href="/#projects"><img src="/images/projects.png" alt="projects" height="13" width="90"></a></li> 
            </ul>
          </div>
        </div>

       
        <div class="main col-sm-10">
          <%= yield %>
        </div>

      </div>
    </div>
  <% else %>
    <div class="col main">
      <%= yield %>
    </div>
  <% end %>

</body>
</html>